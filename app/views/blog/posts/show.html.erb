<p id="welcomePage"><%=link_to "Return to the home page", [:blog,:posts]%></p>
<article class="postShow">
	<center>
		<div class="picture"><%=image_tag @post.picture.url%></div>
		<h1 class="title"><%=@post.title%> By <%= link_to @post.user.fullname, blog_user_path(@post.user)%></h1>
		<h2>(published on <%=@post.publishDate.strftime('%B, the %d, %Y at %H:%M')%>)</h2>
	</center>
	<div class="content">
		<p class="header"><%=@post.header%></p> 
		<p><%=@post.content%></p>
		<%if current_user.present? && @post.user_id == current_user.id %>
			<%=link_to "Edit", edit_blog_post_path(@post)%>
			<%=link_to "Delete", [:blog, @post], method: :delete%>
		<%end%>
	</div>
</article>