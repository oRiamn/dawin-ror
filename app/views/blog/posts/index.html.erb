<ul>
<%@posts.each do |post| %>
	<div>
		<%=link_to [:blog, post] do%>
				<%=image_tag post.picture.thumb.url%> 
				<h1><%=post.title%> (<%=post.publishDate%>)</h1>
				<p><%=post.header%></p> 
				<p>By <%=post.author%></p>
		<%end%>
		<%=link_to "Edit", edit_blog_post_path(post)%>
		<%=link_to "Delete", [:blog, post], method: :delete%>
	</div>
<%end%>
</ul>
<%=link_to "New Post", [:new, :blog, :post]%>