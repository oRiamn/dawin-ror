<h2>Sign up</h2>
<div class="userForm">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <label for="user[email]">Email</label>
    <%= f.email_field :email, autofocus: true %>
    <label for="post[firstname]">Firstname</label>
    <%=f.text_field :firstname%>
    <%=@user.errors.messages[:firstname][0]%>
    <label for="post[lastname]">Lastname</label>
    <%=f.text_field :lastname%>
    <%=@user.errors.messages[:lastname][0]%>
    <label for="post[age]">Age</label>
    <%=f.number_field :age%>
    <%=@user.errors.messages[:age][0]%>
    <label for="post[avatar]">Avatar</label>
    <%=f.file_field :avatar%>
    <%=@user.errors.messages[:avatar][0]%>
    <br/><br/>
    <label for="user[password]">Password</label>
    <%= f.password_field :password, autocomplete: "off" %>
    <label for="user[password]">Password confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <br/>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
